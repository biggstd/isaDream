{
  "$schema": "http://json-schema.org/schema#",
  "title": "Source Schema",
  "description": "JSON-schema for a Treatment.",
  "type": "object",
  "properties": {
    "@id": { "type": "string", "format": "uri" },
    "name": { "type": "string" },
    "description": { "type": "string" },
    "source_node": { "type": "string", "format": "uri" },
    "qualitative_factors": {
      "type": "array",
      "items": { "$ref": "qualitative_factor.json#" }
    },
    "quantitative_factors": {
      "type": "array",
      "items": { "$ref": "quantitative_factor.json#"}
    },
    "treatments": {
      "type": "array",
      "items": { "$ref": "treatment.json#" }
    },
  },
  "additionalProperties": false
}
